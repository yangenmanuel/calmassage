---
import feedbacks from "../utils/feedbacks.json" assert { type: "json" }

import FeedbackCard from "./ui/FeedbackCard.astro"
---

<section class="bg-primary">
  <div class="wrapper mx-auto max-w-container py-10 lg:py-16">
    <h1
      class="px-4 pb-4 text-center font-title text-4xl text-[#FFFCF0] lg:px-0 lg:pb-16 lg:text-5xl">
      Feedback de Clientes
    </h1>

    <div
      class="slider flex flex-wrap justify-center gap-3 lg:justify-center">
      {
        feedbacks.map(({ name, ig, igUser, pfp, profession, review }) => {
          return (
            <FeedbackCard
              name={name}
              ig={ig}
              igUser={igUser}
              pfp={pfp}
              proffession={profession}
              review={review}
            />
          )
        })
      }
    </div>
  </div>
</section>
