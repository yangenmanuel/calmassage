---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Relaxe seu corpo e mente com uma massagem 🧘‍♂️. Agende o seu!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--font-title: 'Lovelace', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		--font-text-bold: 'TTDrugs Bold', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		--font-text: 'TTDrugs', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}

	@font-face {
		font-family: 'Lovelace';
		src: url('/fonts/LovelaceText.otf');
	}

	@font-face {
		font-family: 'TTDrugs';
		src: url('/fonts/TTDrugs-Regular.ttf');
	}

	@font-face {
		font-family: 'TTDrugs Bold';
		src: url('/fonts/TTDrugs-Bold.ttf');
	}
</style>
