---
interface Props {
  name: string;
  pfp: string;
  proffession: string;
  ig: string;
  review: string;
}

const { name, ig, pfp, proffession, review} = Astro.props
---

<div class="bg-white p-6 card w-[300px] h-[280px]">
  <div class="person flex flex-col gap-6">
    <div class="info flex flex-row gap-4">
      <img src={pfp} alt={name} class="w-[30px] object-cover">
      <div class="side-col">
        <p class="font-title font-bold text-primary text-xl">{name}</p>
        <p class="font-title">{proffession}</p>
      </div>
    </div> 
    <div class="review flex flex-col gap-4">
      <a class="flex gap-2 hover:underline transition-all" href={ig}>
        <img src="/icons/ig.svg" alt="" srcset="">
        <p class="font-text-bold">{ig}</p>
      </a>
      <p class="font-text">{review}</p>
    </div>

  </div>
</div>
