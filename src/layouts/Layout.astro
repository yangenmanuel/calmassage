---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Relaxe seu corpo e mente com uma massagem 🧘‍♂️. Agende o seu!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@supports (scrollbar-color: auto;) {
		html {
			scrollbar-color: #695125 #8e6b2c;
			scrollbar-width: thin;
		}
	}

	@supports selector(::-webkit-scrollbar) {
  html::-webkit-scrollbar {
    background: #695125;
		width: 10px;
  }
  html::-webkit-scrollbar-thumb {
    background: #8e6b2c;
		border-radius: 8px;
  }

}

	@font-face {
		font-family: 'Lovelace';
		src: url('/fonts/LovelaceText.otf');
	}

	@font-face {
		font-family: 'TTDrugs';
		src: url('/fonts/TTDrugs-Regular.ttf');
	}

	@font-face {
		font-family: 'TTDrugs Bold';
		src: url('/fonts/TTDrugs-Bold.ttf');
	}
</style>
