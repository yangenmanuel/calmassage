---
import feedbacks from '../utils/feedbacks.json' assert { type: "json" }

import FeedbackCard from './ui/FeedbackCard.astro'
---

<section class="bg-primary">
  <div class="wrapper max-w-container mx-auto">
    <h1 class="font-title text-center py-4 text-4xl text-[#FFFCF0] lg:py-16 lg:text-5xl">Feedback de Clientes</h1>

    <div class="slider flex gap-6">
      {feedbacks.map(({name, ig, pfp, profession, review}) => {
        console.log("wadwa")
        return <FeedbackCard name={name} ig={ig} pfp={pfp} proffession={profession} review={review} />
      })}
    </div>
  </div>
</section>